#!/usr/bin/env bash
# Install nginx on remote server.
sudo apt-get -y update
sudo apt-get -y install nginx

# Edit config file to add a redirect page.
url="https://www.youtube.com/watch?v=QH2-TGUlwu4"
redirect="location /redirect_me { return 301 $url; }"
cp /etc/nginx/sites-available/default ect/ngingx/sites-available/default.bak
sudo sed -i "38i\\\t$redirect\n" /etc/nginx/sites-available/default

echo "Holberton School" | sudo tee /usr/share/nginx/html/index.html
sudo service nginx start
